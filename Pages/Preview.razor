@page "/preview"
<div class="red-gradient vh-100 vw-100">

    <TabTopBar GifModeSelected="true" />
    <div class="w-100 h-50 text-center">
        <img src="@GifBlob" />
    </div>
    <div class="bottom-panel w-100">

        <div>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                </svg>
                Duration:@appSettings.Images.Select(x => x.DelayInMs).Sum() ms
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-image" viewBox="0 0 16 16">
                    <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                    <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z" />
                </svg>
                Frames:@appSettings.Images.Count
            </p>
        </div>

    </div>
    <div class="btn-panel">

    <div class="preview-btn" @onclick="BackToEdit">Edit</div>
    <div class="preview-btn" @onclick="Save">Save</div>
    </div>

</div>
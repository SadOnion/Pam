@page "/previewSfx"
<div class="blue-gradient vh-100 vw-100">

    <TabTopBar GifModeSelected="false" />
    <div class="w-100 h-50 text-center">
        <div class="w-100 image-display text-center">
            <img class="play-btn" src="/images/play.png" @onclick="Play" />
        </div>
    </div>
    <div class="bottom-panel w-100">

        <div>
            <p>
                
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                    <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z" />
                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z" />
                </svg>
                Duration: @($"{Duration.Seconds},{Duration.Milliseconds}") seconds
            </p>
            <p>
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-music-note" viewBox="0 0 16 16">
                    <path d="M9 13c0 1.105-1.12 2-2.5 2S4 14.105 4 13s1.12-2 2.5-2 2.5.895 2.5 2z" />
                    <path fill-rule="evenodd" d="M9 3v10H8V3h1z" />
                    <path d="M8 2.82a1 1 0 0 1 .804-.98l3-.6A1 1 0 0 1 13 2.22V4L8 5V2.82z" />
                </svg>
                Clips: @appSettings.Audios.Count
            </p>
        </div>

    </div>
    <div class="btn-panel">

    <div class="preview-btn blue-gradient" @onclick="BackToEdit">Edit</div>
    <div class="preview-btn blue-gradient" @onclick="Save">Save</div>
    </div>

</div>